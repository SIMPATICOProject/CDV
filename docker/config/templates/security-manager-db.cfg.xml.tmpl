<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://${CDV_MYSQL_HOST}:3306/${CDV_MYSQL_DATABASE}</property>
		<property name="hibernate.connection.username">${CDV_MYSQL_USERNAME}</property>
		<property name="hibernate.connection.password">${CDV_MYSQL_PASSWORD}</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<mapping resource="it/eng/opsi/cdv/datasecuritymanager/crypt/config/hibernate/UserKey.hbm.xml"/>
	</session-factory>
</hibernate-configuration>
