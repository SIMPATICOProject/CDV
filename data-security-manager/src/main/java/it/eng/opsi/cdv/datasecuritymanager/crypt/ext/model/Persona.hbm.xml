<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="it.eng.opsi.cdv.datasecuritymanager.crypt.ext.model.Persona"
		table="persona">
		<meta attribute="class-description">
			This class contains the Persona details.
		</meta>

		<id name="id" type="long" column="id" />
		<property name="firstname" column="firstname" type="string" />
		<property name="lastname" column="lastname" type="string" />
		<property name="codicefiscale" column="codicefiscale" type="string" />
		<property name="birthdate" column="birthdate" type="string" />
		<property name="zipcode" column="zipcode" type="string" />

	</class>
</hibernate-mapping>