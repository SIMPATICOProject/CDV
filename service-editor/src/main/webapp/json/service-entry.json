{
  "title":"ServiceEntry",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  
  "format":"categories",
  
  "properties": {
	  
		  
    "publicServiceID": {
      "type": "string",
	  "title":"Public Service ID"
    },
    "publicServiceName": {
      "type": "string",
	  "title":"Service Name"
    },
    "serviceUri": {
      "type": "string",
	  "title":"Service URL",
	  "format":"url",
	  "links": [
		{
		  "rel": "Open Service page",
		  "href": "{{self}}",
		  "target": "_blank",
		  "class": "comment-link open-in-modal primary-text"
		}
	  ]
	  
    },
    "serviceDescriptionVersion": {
      "type": "string",
	  "title":"Version"
    },
    "publicServiceKeyword": {
      "type": "string",
	  "title":"Keywords"
    },
	"publicServiceStatus": {
      "type": "string",
	  "title":"Status",
	  "enum":["Completed", "Deprecated","UnderDevelopment","WithDrawn"]
    },    
    "serviceProviderId": {
      "type": "string",
	  "title":"Provider ID"
    },
    "organizationId": {
      "type": "string",
	  "title":"Organization ID"
    },
    "serviceType": {
      "type": "string",
	  "title":"Service Provision Type",
		 "enum":["DataSource", "DataSink","Both"]
    },
    "technicalDescriptionId": {
      "type": "string",
	  "title":"Technical Description ID"
    },
	
	"spatial":{
		"type":"string",
		"title":"Spatial"	
		
	},
	
	"lifeEvent":{
		"type":"string",
		"title":"Life Event"	
		
	},
	"businessEvent":{
		"type":"string",
		"title":"Business Event"	
		
	},
	
    "publicServiceSector": {
      "type": "array",
	  "title":"Public Service Sector",
	  "uniqueItems": true,
	  "format":"select",
	 
			
      "items": {
	    "type": "string",
        "title":"Sector",		
		"enum":["Sector1", "Sector2","Sector3"]
	   }
    },
    "publicServiceTypeProp": {
      "type": "array",
	  "title":"Public Service Type",
	  "format":"select",
	  "uniqueItems": true,
      "items": 
        {
          "type": "string",
		  "format":"select",
		  "title":"Type",
		  	
		"enum":["Type1", "Type2","Type3"]
		 
        }
      
    },
    "publicServiceLanguage": {
      "type": "array",
	  "title":"Public Service Language",
	  "format":"table",
	  "uniqueItems": true,
      "items": 
        {
          "type": "string",
		  "title":"Language",
		  "enum":["it_IT", "en_EN","es_ES"]
        }
      
    },
    "humanReadableDescription": {
      "type": "array",
	  "title":"Description",
	  "format":"tabs",
	  "uniqueItems": true,
      "items": 
        {
          "type": "object",
		  "title":"Locale",
		  "headerTemplate": "Locale ({{ self.locale }}) ",
		  "options": {
				"collapsed": false
			},
          "properties": {
            "locale": {
              "type": "string",
			  "enumSource":"possible_langs",
			  "watch": {
				  "possible_langs": "root.publicServiceLanguage"
				  }
            },
            "description": {
              "type": "string",
			  "format": "textarea"
            }
          },
          "required": [
            "locale",
            "description"
          ]
        }
     
    },
    "publicServiceIsDescribedAt": {
      "type": "array",
	  "title":"Service Data Description",
	  "format":"tabs",
      "items": 
        {
          "type": "object",
		  "title":"DataSet",
		  "options": {
				"collapsed": false
			},
		   "format":"categories",
          "properties": {
            "publicServiceDatasetID": {
              "type": "string",
			  "title":"DataSet ID"
            },
            "serviceDataDescriptionUri": {
              "type": "string",
			  "title":"Description URI"
            },
            "taxonomy": {
              "type": "string",
			  "title":"Taxonomy"
            },
            "title": {
              "type": "string",
			   "title":"Title"
            },
            "issued": {
              "type": "integer",
			   "title":"Issued"
            },
            "modified": {
              "type": "integer",
			   "title":"Modified"
            },
            "purpose": {
              "type": "array",
			  "title": "Purposes",
			  "format":"tabs",
	           "uniqueItems": true,
              "items": 
                {
                  "type": "string",
				  "title": "Purpose"
                }
              
            },
            "serviceDataType": {
              "type": "string",
			   "title": "Data Type"
            },
            "dataStructureSpecification": {
              "type": "array",
			  "title": "Data Structure",
              "items": {}
            },
            "dataMapping": {
              "type": "array",
			  "format":"tabs",
			  
			  "title": "Data Mapping",
              "items": 
                {
                  "type": "object",
				  "title": "Field",
				  "id": "arr_item",
				  "properties": {
                    "property": {
                      "type": "string",
					   "title": "Property"
                    },
                    
                    "conceptId": {
						"$ref": "./concepts.json"
                      					   
                    },
					"name": {
                       "type": "string",
					   "options": {
							"hidden": false
						  }
                    },
                    "type": {
                      "type": "string",
					   "title": "Type",
					  "options" :{
						  "input_width":"85px"
					  },
					  "default":"string"
                    },
                    "required": {
                      "type": "number",
					   "title": "Required",
					  "enum": [1,0],
					  "options" :{
						  "enum_titles":["True","False"],
						  "input_width":"100px"
					  }
                    },
                    "sensitive": {
                      "type": "number",
					  "title": "Sensitive",
					  "enum": [1,0],
					  "options" :{
						  "enum_titles":["True","False"],
						  
						  "input_width":"100px"
					  }
                    }					
                  },
                  "required": [
                    "property",
                    "conceptId",
                    "name",
                    "type",
					"required",
					"sensitive"
                  ]
                }
            }
          },
          "required": [
            "publicServiceDatasetID",
            "serviceDataDescriptionUri",
            "taxonomy",
            "title",
            "issued",
            "modified",
            "purpose",
            "serviceDataType",
            "dataStructureSpecification",
            "dataMapping"
          ]
        }
      
    }
  },
  "required": [
    "publicServiceID",
    "publicServiceName",
    "serviceUri",
    "serviceDescriptionVersion",
    "publicServiceKeyword",
    "publicServiceSector",
    "publicServiceTypeProp",
    "publicServiceLanguage",
    "publicServiceStatus",
    "serviceProviderId",
    "organizationId",
	"lifeEvent",
	"businessEvent",
	"spatial",
    "humanReadableDescription",
    "technicalDescriptionId",
    "publicServiceIsDescribedAt"
  ]
}